{
  "name": "livecodes",
  "version": "0.4.0",
  "description": "Code playground that runs in the browser",
  "author": "Hatem Hosny",
  "license": "MIT",
  "keywords": [],
  "private": true,
  "repository": {
    "url": "https://github.com/live-codes/livecodes"
  },
  "scripts": {
    "start": "run-p watch serve",
    "serve": "live-server build --cors --wait=1000",
    "watch": "nodemon --watch src -e * --ignore 'src/*.html' --exec npm run dev:build",
    "dev:build": "run-p build:lib build:web build:styles",
    "build": "run-s clean build:* copy:*",
    "build:lib": "node ./scripts/build.js",
    "build:ts": "tsc --emitDeclarationOnly --outFile build/livecodes/index.d.ts",
    "build:web": "parcel build --out-dir build src/index.html src/embed.html src/demo.html",
    "build:styles": "sass src/livecodes/styles:build/livecodes/styles --style=compressed --no-source-map=true && postcss build/livecodes/styles/*.css --replace --no-map --use autoprefixer",
    "build:api-docs": "typedoc --entryPoints src/livecodes/index.ts --entryPoints src/livecodes/app.ts --entryPoints src/livecodes/_modules.ts --out build/api-docs --exclude **/*.spec.ts --plugin none",
    "copy:assets": "recursive-delete build/livecodes/assets && recursive-copy src/livecodes/assets build/livecodes/assets",
    "copy:vendors": "recursive-delete build/livecodes/vendor && node ./scripts/vendors.js",
    "website:publish": "run-s build gh-pages",
    "gh-pages": "gh-pages -m \"[ci skip] Updates\" -d build",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier src --ignore-path .eslintignore --write",
    "fix:eslint": "eslint --fix --ext js,jsx,ts,tsx .",
    "fix:stylelint": "stylelint --fix \"src/livecodes/styles/*\"",
    "test": "run-s test:*",
    "test:lint": "run-s lint:*",
    "test:unit": "jest src",
    "test:e2e": "playwright test",
    "lint:prettier": "prettier src --ignore-path .eslintignore --list-different",
    "lint:eslint": "eslint --ext js,jsx,ts,tsx . ",
    "lint:stylelint": "stylelint \"src/livecodes/styles/*\"",
    "cov": "run-s \"test:unit -- --coverage\"",
    "cov:send": "run-s cov && codecov",
    "release": "standard-version",
    "prepare-release": "run-s reset build test cov release",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "recursive-delete build",
    "prepush:skip-e2e": "run-s fix build test:lint test:unit",
    "prepush": "run-s fix build test"
  },
  "dependencies": {
    "@codemirror/basic-setup": "0.19.0",
    "@codemirror/commands": "0.19.5",
    "@codemirror/highlight": "0.19.6",
    "@codemirror/lang-css": "0.19.3",
    "@codemirror/lang-html": "0.19.3",
    "@codemirror/lang-javascript": "0.19.2",
    "@codemirror/lang-json": "0.19.1",
    "@codemirror/lang-markdown": "0.19.1",
    "@codemirror/lang-php": "0.19.1",
    "@codemirror/lang-python": "0.19.2",
    "@codemirror/lang-sql": "0.19.3",
    "@codemirror/lang-wast": "0.19.0",
    "@codemirror/language": "0.19.3",
    "@codemirror/legacy-modes": "0.19.0",
    "@codemirror/state": "0.19.2",
    "@codemirror/stream-parser": "0.19.2",
    "@codemirror/theme-one-dark": "0.19.0",
    "@codemirror/view": "0.19.7",
    "@emmetio/action-utils": "1.2.2",
    "@emmetio/html-matcher": "1.3.0",
    "@live-codes/browser-compilers": "0.2.0",
    "@snackbar/core": "1.7.0",
    "emmet": "2.3.4",
    "emmet-monaco-es": "4.7.1",
    "firebase": "9.0.0-beta.2",
    "luna-console": "0.2.0",
    "luna-object-viewer": "0.2.0",
    "lz-string": "1.4.4",
    "monaco-editor": "0.27.0",
    "prismjs": "1.23.0",
    "split.js": "1.6.2"
  },
  "devDependencies": {
    "@bitjson/typedoc": "0.15.0-0",
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@playwright/test": "1.12.0",
    "@types/jest": "25.2.3",
    "@types/live-server": "1.2.0",
    "@types/localforage": "0.0.34",
    "@types/lz-string": "1.3.34",
    "@types/node": "14.0.4",
    "@types/prettier": "2.1.6",
    "@types/prismjs": "1.16.3",
    "@typescript-eslint/eslint-plugin": "4.8.2",
    "@typescript-eslint/parser": "4.8.2",
    "autoprefixer": "10.1.0",
    "codecov": "3.7.0",
    "cz-conventional-changelog": "3.2.0",
    "esbuild": "0.11.12",
    "esbuild-plugin-replace": "1.0.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.1",
    "eslint-plugin-jsdoc": "25.4.2",
    "eslint-plugin-prefer-arrow": "1.2.1",
    "gh-pages": "2.2.0",
    "jest": "26.0.1",
    "live-server": "1.2.1",
    "mkdirp": "1.0.4",
    "nodemon": "2.0.6",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.4",
    "playwright": "1.12.0",
    "postcss": "8.2.15",
    "postcss-cli": "8.3.1",
    "prettier": "2.2.1",
    "recursive-fs": "2.1.0",
    "sass": "1.32.13",
    "standard-version": "9.3.0",
    "stylelint": "13.13.1",
    "stylelint-config-sass-guidelines": "8.0.0",
    "ts-jest": "26.0.0",
    "typedoc": "0.20.36",
    "typescript": "4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/.jest/setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/src/modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/build/**",
      "!**/vendor/**",
      "!src/modules/**"
    ],
    "coverageReporters": [
      "json",
      "html",
      "lcov"
    ]
  }
}
